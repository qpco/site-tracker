{
    "manifest_version": 2,
    "name": "Site Tracker",
    "version": "1.0",

    "description": "Track and display browsing history.",

    "background": {
        "scripts": ["site-tracker.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
          "16": "button-16.png",
          "32": "button-32.png"
        },
        "default_popup": "site-tracker.html"
    }
}
